import express, { Request, Response } from 'express';
import cors from 'cors';
import { Pool } from 'pg';
import dotenv from 'dotenv';

// Cargo el entorno antes que nada.
dotenv.config();

// === MANTENEMOS EL BYPASS TLS POR SI EL CERTIFICADO DE NEON DA PROBLEMAS ===
// (Aunque Neon es mÃ¡s limpio, no podemos arriesgarnos al error 'self-signed')
process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0'; 

const app = express();
const PORT = process.env.PORT || 3000; 

// =========================================================================
// CONFIGURACIÃ“N DE CONEXIÃ“N: ESTÃNDAR PARA NEON (SIN TRUCOS)
// =========================================================================
let connectionString = process.env.DATABASE_URL;

if (!connectionString) {
    console.error('âŒ FATAL: Falta DATABASE_URL. El sistema no puede operar sin credenciales.');
    // Si falla en Vercel, no salimos. La Serverless Function debe terminar con error HTTP.
}

// Neon no requiere manipulaciÃ³n de hostname, puertos, o query strings.
// El driver 'pg' hace todo el trabajo. Usamos el string tal cual.

const pool = new Pool({
    connectionString: connectionString, // Â¡Usamos la URL tal cual la configuraste en Vercel!
    ssl: { 
        rejectUnauthorized: false // Ignora el certificado auto-firmado
    },
    connectionTimeoutMillis: 10000
});

console.log('ðŸš€ Iniciando Backend (MODO NEON/VERCEL - CANAL LIMPIO)...');

// =========================================================================
// MIDDLEWARE Y RUTAS
// =========================================================================
app.use(cors({ origin: '*', credentials: true }));
app.use(express.json());

// Ruta CLAVE: VerificaciÃ³n de acceso.
app.get('/api/test-db', async (req: Request, res: Response) => {
    try {
        const result = await pool.query('SELECT NOW() as hora'); 
        res.json({
            success: true,
            message: 'âœ… Â¡CONEXIÃ“N TÃCTICA ABIERTA! Acceso directo a Neon.',
            hora: result.rows[0].hora,
            database: 'Neon'
        });
    } catch (error: any) {
        console.error('âŒ Error DB - FALLO TÃCTICO:', error.message);
        res.status(500).json({ success: false, error: error.message, database: 'Neon', connectionStringUsed: 'Verify URL in Vercel panel' });
    }
});

app.get('/api/health', (req, res) => {
    res.json({ status: 'ready to deploy', timestamp: new Date() });
});

app.get('/', (req, res) => {
    res.json({ message: 'PetSitter Backend: Canales Abiertos (Vercel/Neon)' });
});

app.listen(PORT, () => {
    console.log(`ðŸ“¡ Escuchando en puerto ${PORT}`);
});

export default app;